<Window x:Class="BetterMC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BetterMC"
        mc:Ignorable="d"
        Title="BetterMC - Minecraft launcher" Height="720" Width="1280" ResizeMode="NoResize"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True">
    <Border Background="#303030">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="60"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Background="#202020"/>
            <TextBlock Text="BetterMC" Foreground="White" FontSize="30" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Poppins" FontWeight="Bold"></TextBlock>
            <StackPanel Grid.Row="1" Background="#202020" >
                <RadioButton Content="HOME" Height="50" Foreground="White" FontSize="25" FontFamily="Poppins" FontWeight="Medium" VerticalAlignment="Center" Style="{StaticResource ScreenMenuButton}"/>
                <RadioButton Content="INSTALL" Height="50" Foreground="White" FontSize="25" FontFamily="Poppins" FontWeight="Medium" VerticalAlignment="Center" Style="{StaticResource ScreenMenuButton}"/>
                <RadioButton Content="BLOOMWARE" Height="50" Foreground="White" FontSize="25" FontFamily="Poppins" FontWeight="Medium" VerticalAlignment="Center" Style="{StaticResource ScreenMenuButton}"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Background="#252525"/>
            <Label x:Name="account_login" Content="Account login" Grid.Column="1" HorizontalAlignment="Left" Margin="60,0,0,0" VerticalAlignment="Top" Height="40" Width="215" FontFamily="Poppins Light" Background="#FF252525" Foreground="White" FontSize="20"/>
            <Label x:Name="account_type" Content="Account type" Grid.Column="1" HorizontalAlignment="Left" Margin="60,22,0,0" VerticalAlignment="Top" Width="148" FontFamily="Poppins ExtraLight" FontSize="14" Foreground="Gray"/>
        </Grid>
    </Border>
</Window>
